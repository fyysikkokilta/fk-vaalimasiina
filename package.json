{
  "name": "fk-vaalimasiina",
  "version": "1.0.0",
  "description": "Electronic voting system for the Guild of Physics",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "next dev --experimental-next-config-strip-types",
    "build": "next build --experimental-next-config-strip-types",
    "start": "next start --experimental-next-config-strip-types",
    "lint": "oxlint .",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "typegen": "next typegen",
    "generate-election": "tsx ./tests/fixtures/generate-election.ts",
    "type:check": "tsc --noEmit",
    "db:generate-migration": "drizzle-kit generate",
    "db:migrate": "tsx ./src/db/migrate.ts",
    "preinstall": "pnpx only-allow pnpm",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@base-ui/react": "^1.1.0",
    "@dnd-kit/helpers": "^0.2.3",
    "@dnd-kit/react": "^0.2.3",
    "@next/bundle-analyzer": "^16.1.6",
    "@react-email/components": "^1.0.7",
    "@t3-oss/env-nextjs": "^0.13.10",
    "csv-parse": "^6.1.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "jose": "^6.1.3",
    "lucide-react": "^0.563.0",
    "minio": "^8.0.6",
    "next": "^16.1.6",
    "next-intl": "^4.8.2",
    "next-safe-action": "^8.0.11",
    "nextjs-toploader": "^3.9.17",
    "nodemailer": "^7.0.13",
    "pg": "^8.18.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "seedrandom": "^3.0.5",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.2.0",
    "@types/nodemailer": "^7.0.9",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.11",
    "@types/react-dom": "^19.2.3",
    "@types/seedrandom": "^3.0.8",
    "babel-plugin-react-compiler": "^1.0.0",
    "drizzle-kit": "^0.31.8",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "postcss": "^8.5.6",
    "simple-git-hooks": "^2.13.1",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpx lint-staged"
  },
  "packageManager": "pnpm@10.29.1",
  "pnpm": {
    "overrides": {
      "@types/nodemailer@*>@aws-sdk/client-sesv2": "-"
    },
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@swc/core",
      "esbuild",
      "sharp",
      "simple-git-hooks",
      "unrs-resolver"
    ]
  }
}
